CREATE PROCEDURE {databaseOwner}{objectQualifier}Blog_AddCategory 

		@Category nvarchar(255),
		@ParentID int,
		@PortalID int
	AS
	BEGIN
		SET NOCOUNT ON;
		INSERT INTO {databaseOwner}{objectQualifier}Blog_Categories (Category, ParentID, PortalID) VALUES (@Category, @ParentID, @PortalID)
		RETURN @@IDENTITY
	
	END

GO

