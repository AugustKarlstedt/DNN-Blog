GO

CREATE PROCEDURE {databaseOwner}{objectQualifier}Blog_GetCategory 
	@CatID int
AS
BEGIN
	SET NOCOUNT ON;

	SELECT CatID, Category, ParentID
	FROM {databaseOwner}{objectQualifier}Blog_Categories
	WHERE CatID = @CatID
END

GO

